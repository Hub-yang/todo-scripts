{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "bin",
    "dist",
    "node_modules"
  ]
}
